<configuration>
  <property name="LOG_LEVEL" value="${LOG_LEVEL:-INFO}"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{ISO8601} %-5level [%thread] %logger{36} %X{callId:-} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="io.ktor" level="WARN"/>
  <logger name="com.example.app" level="${LOG_LEVEL}"/>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
