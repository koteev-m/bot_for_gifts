<configuration>
    <property name="APP_LOG_LEVEL" value="${LOG_LEVEL:-INFO}" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level [%thread] requestId=%X{callId:-} method=%X{method:-} uri=%X{uri:-} status=%X{status:-} durationMs=%X{duration:-} %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.ktor" level="WARN" />
    <logger name="com.example" level="${APP_LOG_LEVEL}" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
